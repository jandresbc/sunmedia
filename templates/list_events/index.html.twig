{% extends 'base.html.twig' %}

{% block title %}Events!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Users Events</h1>

    <div class="table-responsive">
    <table class='table table-sm'>
        <th>id</th>
        <th>IP</th>
        <th>User Agent</th>
        <th>Code Country</th>
        <th>Event Key</th>
        <th>Created</th>
        <th>Updated</th>
        <th>Actions</th>
        <tbody>
            {% for dat in data %}
                <tr>
                    <td>{{dat.id}}</td>
                    <td>{{dat.IpUser}}</td>
                    <td>{{dat.UserAgent}}</td>
                    <td>{{dat.CodeCounty}}</td>
                    <td>{{dat.EventKey}}</td>
                    <td>{{dat.CreatedAt.format("Y-m-d H:i:s")}}</td>
                    <td>{{dat.UpdatedAt.format("Y-m-d H:i:s")}}</td>
                    <td><a href="{{ path('edit_events',{'id':dat.id})}}">Edit</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}
